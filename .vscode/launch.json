{
  "version": "0.1.0",
  "configurations": [
    {
      "name": "Tutors-Json",
      "program": "${workspaceFolder}//apps/tutors-json/src/tutors-json.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "cwd": "${workspaceFolder}/courses/tutors-reference/"
    },
    {
      "name": "Tutors-Html",
      "program": "${workspaceFolder}//apps/tutors-html/src/tutors-html.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "cwd": "${workspaceFolder}/courses/tutors-reference"
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Tutors-Course-Reader",
      "port": 9222,
      "urlFilter": "http://localhost:5001/*",
      "webRoot": "${workspaceFolder}/sites/tutors-course-reader"
    }
  ]
}

/* /Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome --remote-debugging-port=9222 */
